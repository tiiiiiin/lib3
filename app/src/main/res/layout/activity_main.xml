<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFF4B3">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alatsi"
        android:text="Utopia"
        android:textAlignment="center"
        android:textColor="#A3002D"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:text="Library"
        android:textAlignment="center"
        android:textColor="#920041"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/authorize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:text="Авторизация"
        android:textAlignment="center"
        android:textColor="#773D31"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorize"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:hint="введите пароль"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#920041"
        android:textSize="30sp" />

    <Button
        android:id="@+id/trans_btn"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_below="@+id/user_field"
        android:layout_marginHorizontal="130dp"
        android:layout_marginTop="25dp"
        android:onClick="trans_btn"
        android:text="@string/trans_btn"
        android:textAlignment="center"
        android:textSize="28sp" />

</RelativeLayout>